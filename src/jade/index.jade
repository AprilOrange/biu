    script.
      function promptUser() {
        var html = 'Enter your name: <input id="prompt" type="text"/> <button id="ok" class="button">OK!</button>'
        var tip = biu(html, {
          autoHide: false,
          onHidden: function () {
            var name = document.querySelector('#prompt').value
            biu('hello ' + name, {pop: true})
          }  
        })
        document.getElementById('ok').addEventListener('click', function () {
          tip.hide()
        }, false)
      }
